@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = "_Layout_login";
}


<div class="card card-login mx-auto mt-5">
    <div class="card-header">Reset Passwordt</div>
    <div class="card-body">
        <div class="text-center mt-4 mb-5">
            <h4>Forgot your password?</h4>
            <p>Enter your email address and we will send you instructions on how to reset your password.</p>
        </div>
        <form asp-action="ForgotPassword" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter email address"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        <div class="text-center">
            <a class="d-block small mt-3" asp-action="Register"  asp-route-returnurl="@ViewData["ReturnUrl"]">Register as a new user?</a>
            <a class="d-block small" asp-action="Login">Login Page</a>
        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
